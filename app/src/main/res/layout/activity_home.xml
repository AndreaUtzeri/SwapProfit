<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCounter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profit: €0"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvCounter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Future Profit: €0"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:layout_below="@id/tvCounter1"/>

    <Button
        android:id="@+id/btnSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales"
        android:layout_margin="16dp"
        android:layout_below="@id/tvCounter2"/>

    <Button
        android:id="@+id/btnPurchases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchases"
        android:layout_margin="16dp"
        android:layout_below="@id/btnSales"/>

    <Button
        android:id="@+id/btnWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wishlist"
        android:layout_margin="16dp"
        android:layout_below="@id/btnPurchases"/>
</RelativeLayout>
